<% layout('../layout/layout') %>
<div class="container">
	<section>
		<div>				
			<table class="table">
				<colgroup>
					<col width="50">
					<col>
					<col width="100">
					<col width="70">
					<col width="160">
				</colgroup>
				<thead>
					<tr>
						<th>번호</th>
						<th>제목</th>
						<th>글쓴이</th>
						<th>조회</th>
						<th>작성일</th>
					</tr>
				</thead>
				<tbody>
					<% list.forEach((board, i)=>{ %> 							
						<tr class="active">
							<td><%= board._id %></td>
							<td><a href="/board/<%= board._id %>"><%= board.title %></a></td>
							<td><%= board.writer %></td>
							<td><%= board.view %></td>
							<td><%= board.regdate %></td>
						</tr>
					<% }); %>
				</tbody>
			</table>
		</div>
		<hr>
		<div class="form-group text-center">
			<a href="/board/new" class="btn btn-default btn-sm">글쓰기</a>
		</div>
	</section>
</div>